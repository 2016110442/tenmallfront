<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cn.wanxi.dao.cart.CartDao">
    <select id="findCartList" resultMap="getCartList">
        select *  from wx_tab_sku t1,wx_tab_spu t2,wx_tab_cart t3
        where t3.spu_id=t2.id and
        t3.sku_id=t1.id and
        t3.username='wangsan'
        limit #{page},#{size}
    </select>
    <resultMap id="getCartList" type="com.cn.wanxi.model.cart.WxTabSpu">
        <id property="id" column="id"/>
        <result property="sn" column="sn"/>
        <result property="name" column="name"/>
        <result property="brandId" column="brand_id"/>
        <result property="category1Id" column="category1_id"/>
        <result property="category2Id" column="category2_id"/>
        <result property="category3Id" column="category3_id"/>
        <result property="templateId" column="template_id"/>
        <result property="freightId" column="freight_id"/>
        <result property="image" column="image"/>
        <result property="images" column="images"/>
        <result property="saleService" column="sale_service"/>
        <result property="introduction" column="introduction"/>
        <result property="specItems" column="spec_items"/>
        <result property="paraItems" column="para_items"/>
        <result property="saleNum" column="sale_num"/>
        <result property="commentNum" column="comment_num"/>
        <result property="isMarketable" column="is_marketable"/>
        <result property="isEnablePec" column="is_enable_pec"/>
        <result property="isDelete" column="is_delete"/>
        <result property="status" column="status"/>
        <association property="wxTabSku"  javaType="com.cn.wanxi.model.cart.WxTabSku">
            <id property="id" column="id"></id>
            <result property="sn" column="sn"/>
            <result property="name" column="name"/>
            <result property="price" column="price"/>
            <result property="num" column="num"/>
            <result property="alertNum" column="alert_num"/>
            <result property="image" column="image"/>
            <result property="images" column="images"/>
            <result property="weight" column="weight"/>
            <result property="createTime" column="create_time"/>
            <result property="updateTime" column="update_time"/>
            <result property="spuId" column="spu_id"/>
            <result property="categoryId" column="category_id"/>
            <result property="categoryName" column="category_name"/>
            <result property="brandName" column="brand_name"/>
            <result property="spec" column="spec"/>
            <result property="saleNum" column="sale_num"/>
            <result property="commentNum" column="comment_num"/>
            <result property="status" column="status"/>
        </association>
        <association property="wxTabCart"  javaType="com.cn.wanxi.model.cart.WxTabCart">
            <id property="id" column="id"></id>
            <result property="skuId" column="sku_id"/>
            <result property="spuId" column="spu_id"/>
            <result property="num" column="num"/>
            <result property="status" column="status"/>
            <result property="username" column="username"/>
            <result property="spec" column="spec"/>

        </association>
    </resultMap>
</mapper>
